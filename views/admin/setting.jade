extends ../layout

block content
    div.d-inline-flex.flex-row.w-100
        div.w-50
            .card.m-2
                .card-header
                    h2 Boards
                .card-body
                    if boards
                        each  board, i  in boards
                            .card.pl-0.pr-0.m-5
                                .card-body.container-fluid.row
                                    h5.card-title.col-sm #{board.board_name}
                                    div.col-sm
                                        h6 users
                                        ul.list-group.w-50
                                            if board.users
                                                each user,i in board.users
                                                    li.list-group-item  #{user}


                                    div.col-sm
                                        h6 columns
                                        ul.list-group.w-50
                                            if board.columns!=null
                                                each column,i in board.columns
                                                    li.list-group-item  #{column.column_name}
                                                        span.badge.badge-primary.badge-pill
                                    div
                                        a.btn.btn-primary(href="/settings/delete/"+board.board_name) Delete
                                        a.btn.btn-primary( class="hideshow" ,id=board.board_name) Edit

                            div.shadow-lg.p-3.mb-5.bg-white.rounded(style='display:none',class =board.board_name)
                                form.offset-md-3(method='post', action='/boards/add' ).m-1.mt-0
                                    .form-group.m-2
                                        label board name
                                        input.form-control(name='name',value=board.board_name, type='text', placeholder='Enter board name')
                                    .form-group.m-2
                                        label(for='comment') description
                                        textarea.form-control(columns="150",rows='5',name='description',placeholder="description") #{board.description}


                                    .form-group.m-2
                                        .row

                                            h3.text-center User
                                        .well(style='max-height: 300px;overflow: auto;')
                                            ul.list-group.checked-list-box
                                                if users
                                                    each user ,i in users
                                                        .form-group.m-2
                                                            label(for='comment') #{user.username}
                                                            input.form-check-input(type='checkbox' name='users' value=user.username)

                                    .form-group.boards
                                        if(board.image=="ice")
                                            label
                                                input(type='radio' ,value ='ice',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/ice.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='ice',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/ice.jpg' ,width='100',height='70')
                                        if(board.image == "city")
                                            label
                                                input(type='radio' ,value ='city',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/city.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='city',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/city.jpg' ,width='100',height='70')
                                        if(board.image == "desert")
                                            label
                                                input(type='radio' ,value ='ice',name='desert',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/desert.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='desert',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/desert.jpg' ,width='100',height='70')
                                        if(board.image == "galaxy")
                                            label
                                                input(type='radio' ,value ='galaxy',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/galaxy.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='galaxy',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/galaxy.jpg' ,width='100',height='70')
                                        if(board.image == "gazelle")
                                            label
                                                input(type='radio' ,value ='gazelle',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/gazelle.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='gazelle',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/gazelle.jpg' ,width='100',height='70')
                                        if(board.image == "sea")
                                            label
                                                input(type='radio' ,value ='sea',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/sea.jpg' ,width='100',height='70')
                                        else
                                            label
                                                input(type='radio' ,value ='sea',name='image',checked='')
                                                img.mb-1.mr-1(src='/images/backgrounds/sea.jpg' ,width='100',height='70')

                                    button.btn.btn-primary(type='submit', value='Submit') Save changes
        .card.w-25.m-2.h-auto
            .card-header
                h2 Users
            .card-body.h-auto
                div.border-dark.w-100.h-auto
                    if users!=null
                            each user , i in users
                                ul.list-group
                                    li.list-group-item  #{user.username}
                                        a.btn.btn-primary.float-right(href="/settings/delete/"+user._id) Delete
                                        a.btn.btn-primary.float-right( class="hideshow" ,id=user._id+"a") Edit
                                    div.shadow-lg.p-3.mb-5.bg-white.rounded(style='display:none',class =user._id+"a")
                                        form.col-md-6.offset-md-3(method='post', action='/users/register')
                                            .form-group
                                                input.form-control(name='username', type='text', placeholder='Enter Username',value=user.username)
                                            .form-group
                                                input.form-control(name='email', type='text', placeholder='your email',value=user.email)
                                            .form-group
                                                input.form-control(name='password', type='password', placeholder='Enter Password')

                                                div.row.justify-content-center
                                            .form-group
                                                input.form-check-input(type='checkbox',name='admin')
                                                label.form-check-label(for='gridCheck')
                                                    | admin

                                            .form-group.col-md-4

                                                input.form-check-input(type='checkbox')
                                                label.form-check-label(for='gridCheck')
                                                    | Check me out
                                            button.btn.btn-primary(type='submit',value='Submit') Sign in

                                            button.btn.btn-danger(name='cancel', href='/') Cancel





            