extends ../layout

block content

    div.m-5.m-5.m-5.sortable.draggable

        if boards
            each  board, i  in boards
                if (i+1)%5===0 && i!==0

                .card.m-2.d-inline-block.ui-state-default(style='width: 25rem;')
                    .card-body
                        img.card-img.rounded(src="/images/backgrounds/"+board.image+".jpg", alt='Card image cap')
                        h5.card-title  yeah
                        h6.card-subtitle.mb-2.text-muted Card subtitle
                        p.card-text
                            | #{board.description}
                        a(href='/board/display/'+board.board_name) display board
                        a.card-link(href='/boards/delete/'+board.board_name) delete board

        button.btn.btn-primary(type='button', data-toggle='modal', data-target='#addboardModal').m-3.ml-5
            | add board











    // Modal
    #addboardModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')

        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Add board
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') Ã—
                .modal-body.w-100
                    form.offset-md-3(method='post', action='/boards/add').m-1.mt-0
                        .form-group.m-2
                            label board name
                            input.form-control(name='name', type='text', placeholder='Enter board name')
                        .form-group.m-2
                            label(for='comment') description
                            textarea#comment.form-control(columns="150",rows='5',name='description',placeholder="description")
                        .form-group.m-2
                            .row

                                h3.text-center Users
                            .well(style='max-height: 300px;overflow: auto;')
                                ul.list-group.checked-list-box
                                    if users
                                        each user ,i in users
                                            .form-group.m-2
                                                label(for='comment') #{user.username}
                                                input#gridCheck.form-check-input(type='checkbox' name='users' value=user.username)
                        .form-group
                            label
                                input(type='radio' ,value ='ice',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/ice.jpg' ,width='100',height='70')
                            label
                                input(type='radio' ,value ='gazelle',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/gazelle.jpg' ,width='100p',height='70')
                            label
                                input(type='radio' ,value ='desert',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/desert.jpg' ,width='100',height='70')
                            label
                                input(type='radio' ,value ='city',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/city.jpg' ,width='100p',height='70')
                            label
                                input(type='radio' ,value ='sea',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/sea.jpg' ,width='100p',height='70')
                            label
                                input(type='radio' ,value ='galaxy',name='image')
                                img.mb-1.mr-1(src='/images/backgrounds/galaxy.jpg' ,width='100p',height='70')

                        button.btn.btn-primary(type='submit', value='Submit') Save changes


                .modal-footer
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Close





